{% block html_head_container %}

  {% include 'html-header.twig' %}
  {% block head %}
  {% endblock %}
</head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
  <header class="header bg-white" >
    {% block header %}
      <div class="container">
        <nav class="navbar navbar-toggleable-md navbar-light" role="navigation">
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h1 class="navbar-brand" role="banner">
            <a href="{{site.url}}" rel="home">{{site.name}}</a>
          </h1>
          <div class="collapse navbar-collapse" id="navbarMain">
            {% include "menu.twig" with {'menu': menu.get_items} %}
          </div>
        </nav>
      </div>
    {% endblock %}
  </header>

  {% block jumbotron %}{% endblock %}

  <section id="content" role="main" class="content-wrapper bg-white py-5">
    {% if title %}<h1>{{title}}</h1>{% endif %}
      <div class="container">
        <div class="col-md-12">
          {% block content %}
            Sorry, no content
          {% endblock %}
        </div>
        {% if sidebar %}
          <aside class="layout-sidebar">
            {{sidebar}}
          </aside>
        {% endif %}
      </div>
    </div>
  </section>

  {% block after_content %}{% endblock %}

  {% block footer %}
    <footer id="footer">
      <div class="container">
        <div class="col-md-12">
          {% include 'footer.twig' %}
        </div>
      </div>
    </footer>
    {{ function('wp_footer') }}
  {% endblock %}
</body>
</html>
